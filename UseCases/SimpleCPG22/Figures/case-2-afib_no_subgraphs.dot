// Decisions
d_special_circumstances [type=decision, dataItem=special_circumstances];
d_afib_type [type=decision, dataItem=afib_type];
d_symptom_recurrence [type=decision, dataItem=symptom_recurrence];
d_symptoms_improve [type=decision, dataItem=symptoms_improve];
d_symptoms_resolve [type=decision, dataItem=symptoms_resolve];
d_afib_recurs [type=decision, dataItem=afib_recurs];
d_tachychardia [type=decision, dataItem=tachychardia];

// Parallel gateways
p1 [type=parallel];
p2 [type=parallel];
p_end [type=parallel, parallelEndNode=True];

// Ranges for yes/no No [0-5] / Yes [6-10]
// Arcs
c_afib -> p1 -> d_special_circumstances;
d_special_circumstances -> a_rate_control_1 [range=0..5]; //[label="no"];
// d_special_circumstances -> a_rhytm_control_1 [range=6..10]; //[label="yes"];
d_special_circumstances -> d_afib_type [range=6..10]; //[label="yes"];
// a_rhytm_control_1 -> d_afib_type;
d_afib_type -> d_symptom_recurrence [range=0..5]; //[label="paroxysmal"];
d_afib_type -> a_cardioversion [range=6..10]; //[label="persistent"];
a_rate_control_1  -> d_symptoms_resolve;
p1 -> a_anticoagulation -> p_end;
// d_symptoms_resolve -> a_rhytm_control_1 [range=0..5]; //[label="no"];
d_symptoms_resolve -> d_afib_type [range=0..5]; //[label="no"];
d_symptoms_resolve -> a_rate_control_maintenance [range=6..10]; //[label="yes"];
a_cardioversion -> d_symptoms_improve;
d_symptoms_improve -> a_rate_control_maintenance [range=0..5]; //[label="no"];
d_symptoms_improve -> p2 [range=6..10]; //[label="yes"];

p2 -> {d_tachychardia, d_afib_recurs};
d_tachychardia -> a_rate_control_maintenance [range=6..10]; //[label=<yes>];
d_tachychardia -> p_end [range=0..5]; //[label=<no>];
d_afib_recurs -> a_rhytm_control_maintenance [range=6..10]; //[label=<yes>];
d_afib_recurs -> p_end [range=0..5]; //[label="no"];

d_symptom_recurrence -> a_pill_in_a_pocket [range=0..5]; //[label="no"];
d_symptom_recurrence -> a_rhytm_control_maintenance [range=6..10]; //[label="yes"];

{a_rate_control_maintenance, a_rhytm_control_maintenance, a_pill_in_a_pocket} -> p_end;

// a goal is needed
p_end -> g1;
