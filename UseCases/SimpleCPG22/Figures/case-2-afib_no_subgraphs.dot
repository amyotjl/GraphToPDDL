a_anticoagulation [type=action, cost=0];
a_rate_control_1 [type=action, cost=4];
a_rate_control_maintenance [type=action, cost=0];
//a_rhytm_control_1 [label=<Dronedarone or flecainide or amiodarone<br/><i>duration: ?</i>>];
a_rhytm_control_maintenance [type=action, cost=0];
a_pill_in_a_pocket [type=action, cost=0];


